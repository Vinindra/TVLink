<?xml version="1.0" encoding="utf-8"?>
<!--
    TVLink Adaptive Icon Foreground — Ollama Style
    Single bold white silhouette on transparent canvas.
    All art is scaled to 0.75× and centred at (54,54) to guarantee
    it lives safely inside the 72 dp circular safe-zone.
-->
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <group
        android:scaleX="0.65"
        android:scaleY="0.65"
        android:pivotX="54"
        android:pivotY="54">

        <!--
            TV Screen — rounded rect, stroke only
        -->
        <path
            android:pathData="
                M 20,28
                L 88,28
                Q 92,28 92,32
                L 92,68
                Q 92,72 88,72
                L 20,72
                Q 16,72 16,68
                L 16,32
                Q 16,28 20,28
                Z"
            android:fillColor="#00000000"
            android:strokeColor="#FFFFFF"
            android:strokeWidth="5" />

        <!--
            TV Stand — single vertical line + horizontal foot
        -->
        <path
            android:pathData="M 54,72 L 54,82"
            android:fillColor="#00000000"
            android:strokeColor="#FFFFFF"
            android:strokeWidth="5"
            android:strokeLineCap="round" />

        <path
            android:pathData="M 38,82 L 70,82"
            android:fillColor="#00000000"
            android:strokeColor="#FFFFFF"
            android:strokeWidth="5"
            android:strokeLineCap="round" />

        <!--
            Link / Connection symbol inside the TV screen
            Two interlocking chain-link ovals, simple and bold
        -->
        <!-- Left link ring -->
        <path
            android:pathData="
                M 46,44
                L 38,44
                Q 32,44 32,50
                Q 32,56 38,56
                L 46,56"
            android:fillColor="#00000000"
            android:strokeColor="#FFFFFF"
            android:strokeWidth="4.5"
            android:strokeLineCap="round" />

        <!-- Right link ring -->
        <path
            android:pathData="
                M 62,44
                L 70,44
                Q 76,44 76,50
                Q 76,56 70,56
                L 62,56"
            android:fillColor="#00000000"
            android:strokeColor="#FFFFFF"
            android:strokeWidth="4.5"
            android:strokeLineCap="round" />

        <!-- Connecting bar between links -->
        <path
            android:pathData="M 44,50 L 64,50"
            android:fillColor="#00000000"
            android:strokeColor="#FFFFFF"
            android:strokeWidth="4.5"
            android:strokeLineCap="round" />

    </group>
</vector>
